---
import SiteLayout from "../layouts/SiteLayout.astro";
import { wikiData } from "../data/wiki";
---

<SiteLayout title="Awards — Wiqnnc_’s Wiki" pageId="awards">
  <section class="py-20">
    <div class="container space-y-10">
      <header class="glass-panel px-8 py-10">
        <h1 class="font-display text-3xl text-white">Achievements</h1>
        <p class="mt-4 max-w-2xl text-white/70">
          Filterable medal chips, timeline scrubber, and micro confetti are slated for the
          next sprint. For now, every recorded award is listed chronologically below.
        </p>
      </header>
      <div class="grid gap-4">
        {wikiData.awards.map((entry) => (
          <div
            class="glass-panel flex flex-col gap-2 px-6 py-4 text-sm text-white/80 md:flex-row md:items-center md:justify-between"
            key={`${entry.year}-${entry.title}-${entry.field}`}
          >
            <span class="font-semibold text-white">{entry.title}</span>
            <span class="text-white/60 uppercase tracking-[0.3em]">
              {entry.field}
            </span>
            <span class="text-white/50">{entry.detail}</span>
            <span class="text-white/40">{entry.year}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
</SiteLayout>
